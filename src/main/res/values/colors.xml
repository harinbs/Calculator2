<resources>
    <style name="ButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonStyle.Number">
        <item name="android:background">@drawable/button_number_background</item>
    </style>

    <style name="ButtonStyle.Operator">
        <item name="android:background">@drawable/button_operator_background</item>
    </style>

    <style name="ButtonStyle.Function">
        <item name="android:background">@drawable/button_function_background</item>
    </style>
</resources>


